<?xml version="1.0" encoding="utf-8" standalone="no"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="com.coolappz.Castelpagano" version="1.0.0">
    <name>Castelpagano</name>
    <description>
        Castelpagano Turismo
    </description>
    <author email="giuseppe.c95@hotmail.it" href="http://cordova.io">
        Carolla Giuseppe
    </author>
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" spec="1"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
        <icon density="ldpi" src="res/android/36.png"/>
        <icon density="mdpi" src="res/android/48.png"/>
        <icon density="hdpi" src="res/android/72.png"/>
        <icon density="xhdpi" src="res/android/96.png"/>
        <icon density="xxxhdpi" src="res/android/192.png"/>
        <icon density="ldpi" src="res/ios/36.png"/>
        <icon density="mdpi" src="res/ios/48.png"/>
        <icon density="hdpi" src="res/ios/72.png"/>
        <icon density="xhdpi" src="res/ios/96.png"/>
        <icon density="xxxhdpi" src="res/ios/192.png"/>
        
        <splash src="res/screen/android/res-long-land-hdpi/default.png" density="land-hdpi"/>
        <splash src="res/screen/android/res-long-land-ldpi/default.png" density="land-ldpi"/>
        <splash src="res/screen/android/res-long-land-mdpi/default.png" density="land-mdpi"/>
        <splash src="res/screen/android/res-long-land-xhdpi/default.png" density="land-xhdpi"/>

        <splash src="res/screen/android/res-long-port-hdpi/default.png" density="port-hdpi"/>
        <splash src="res/screen/android/res-long-port-ldpi/default.png" density="port-ldpi"/>
        <splash src="res/screen/android/res-long-port-mdpi/default.png" density="port-mdpi"/>
        <splash src="res/screen/android/res-long-port-xhdpi/default.png" density="port-xhdpi"/>

    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
    
</widget>
